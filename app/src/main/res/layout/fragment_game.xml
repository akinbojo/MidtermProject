<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <TextView
        android:id="@+id/editTextGuess"
        android:layout_width="382dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:hint="Enter your guess:"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPlayerName"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPlayerName"

        android:layout_width="382dp"
        android:layout_height="80dp"
        android:hint="PlayerName:"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ans"
        android:layout_width="187dp"
        android:layout_height="59dp"
        android:inputType="text"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="190dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="46dp"
        android:layout_height="86dp"
        android:src="@drawable/baseline_remove_24"
        app:layout_constraintEnd_toStartOf="@+id/ans"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="163dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="46dp"
        android:layout_height="86dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ans"
        tools:layout_editor_absoluteY="163dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Ok"
        android:layout_width="347dp"
        android:layout_height="86dp"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans" />


</androidx.constraintlayout.widget.ConstraintLayout>